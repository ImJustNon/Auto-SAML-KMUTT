{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./build",
        "baseUrl": "/src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "incremental": true,
        "removeComments": true,
        "sourceMap": false,
        "declaration": false
    },
    "include": [
        "./**/*",
        "./**/**/*.json",
        "./prisma/schema.prisma"
    ]
}
